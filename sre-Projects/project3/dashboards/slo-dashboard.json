{
  "__inputs": [],
  "__requires": [
    { "type": "grafana", "id": "grafana", "name": "Grafana", "version": "9.0.0" },
    { "type": "datasource", "id": "prometheus", "name": "Prometheus" }
  ],
  "annotations": { "list": [] },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "id": null,
  "links": [],
  "liveNow": false,
  "panels": [
    {
      "title": "SLO Overview",
      "type": "row",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 },
      "collapsed": false
    },
    {
      "title": "Availability SLO (Target: 99.9%)",
      "type": "gauge",
      "gridPos": { "h": 8, "w": 6, "x": 0, "y": 1 },
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "orange", "value": 0.995 },
              { "color": "yellow", "value": 0.999 },
              { "color": "green", "value": 0.9995 }
            ]
          },
          "min": 0.99,
          "max": 1,
          "unit": "percentunit",
          "decimals": 4
        }
      },
      "targets": [
        {
          "expr": "sli:availability:ratio_rate30d{service=~\"$service\"}",
          "legendFormat": "{{ service }}"
        }
      ]
    },
    {
      "title": "Error Budget Remaining",
      "type": "gauge",
      "gridPos": { "h": 8, "w": 6, "x": 6, "y": 1 },
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "orange", "value": 0.25 },
              { "color": "yellow", "value": 0.5 },
              { "color": "green", "value": 0.75 }
            ]
          },
          "min": 0,
          "max": 1,
          "unit": "percentunit",
          "decimals": 1
        }
      },
      "targets": [
        {
          "expr": "slo:error_budget:remaining_ratio{service=~\"$service\"}",
          "legendFormat": "{{ service }}"
        }
      ]
    },
    {
      "title": "Latency SLO (Target: 99% < 300ms)",
      "type": "gauge",
      "gridPos": { "h": 8, "w": 6, "x": 12, "y": 1 },
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "orange", "value": 0.98 },
              { "color": "yellow", "value": 0.99 },
              { "color": "green", "value": 0.995 }
            ]
          },
          "min": 0.95,
          "max": 1,
          "unit": "percentunit",
          "decimals": 3
        }
      },
      "targets": [
        {
          "expr": "sli:latency:ratio_rate1d{service=~\"$service\"}",
          "legendFormat": "{{ service }}"
        }
      ]
    },
    {
      "title": "Current Burn Rate (1h)",
      "type": "stat",
      "gridPos": { "h": 8, "w": 6, "x": 18, "y": 1 },
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 1 },
              { "color": "orange", "value": 6 },
              { "color": "red", "value": 14.4 }
            ]
          },
          "unit": "x",
          "decimals": 1
        }
      },
      "targets": [
        {
          "expr": "slo:error_budget:burn_rate_1h{service=~\"$service\"}",
          "legendFormat": "{{ service }}"
        }
      ]
    },
    {
      "title": "Burn Rate & Error Budget",
      "type": "row",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 9 },
      "collapsed": false
    },
    {
      "title": "Burn Rate Over Time",
      "type": "timeseries",
      "gridPos": { "h": 10, "w": 12, "x": 0, "y": 10 },
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 10,
            "drawStyle": "line",
            "showPoints": "never"
          },
          "unit": "x",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "red", "value": 14.4 }
            ]
          }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "Critical Threshold (14.4x)" },
            "properties": [
              { "id": "custom.lineStyle", "value": { "fill": "dash", "dash": [10, 10] } },
              { "id": "color", "value": { "fixedColor": "red", "mode": "fixed" } },
              { "id": "custom.fillOpacity", "value": 0 }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Warning Threshold (6x)" },
            "properties": [
              { "id": "custom.lineStyle", "value": { "fill": "dash", "dash": [10, 10] } },
              { "id": "color", "value": { "fixedColor": "orange", "mode": "fixed" } },
              { "id": "custom.fillOpacity", "value": 0 }
            ]
          }
        ]
      },
      "targets": [
        {
          "expr": "slo:error_budget:burn_rate_1h{service=~\"$service\"}",
          "legendFormat": "1h Burn Rate"
        },
        {
          "expr": "slo:error_budget:burn_rate_6h{service=~\"$service\"}",
          "legendFormat": "6h Burn Rate"
        },
        {
          "expr": "vector(14.4)",
          "legendFormat": "Critical Threshold (14.4x)"
        },
        {
          "expr": "vector(6)",
          "legendFormat": "Warning Threshold (6x)"
        }
      ]
    },
    {
      "title": "Error Budget Consumption Over Time",
      "type": "timeseries",
      "gridPos": { "h": 10, "w": 12, "x": 12, "y": 10 },
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 20,
            "drawStyle": "line",
            "gradientMode": "scheme"
          },
          "unit": "percentunit",
          "min": 0,
          "max": 1,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "orange", "value": 0.25 },
              { "color": "green", "value": 0.5 }
            ]
          }
        }
      },
      "targets": [
        {
          "expr": "slo:error_budget:remaining_ratio{service=~\"$service\"}",
          "legendFormat": "Budget Remaining"
        }
      ]
    },
    {
      "title": "Request Metrics",
      "type": "row",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 20 },
      "collapsed": false
    },
    {
      "title": "Availability (Success Rate) Over Time",
      "type": "timeseries",
      "gridPos": { "h": 10, "w": 12, "x": 0, "y": 21 },
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 15,
            "drawStyle": "line",
            "showPoints": "never"
          },
          "unit": "percentunit",
          "min": 0.99,
          "max": 1,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "green", "value": 0.999 }
            ]
          }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "SLO Target (99.9%)" },
            "properties": [
              { "id": "custom.lineStyle", "value": { "fill": "dash", "dash": [10, 10] } },
              { "id": "color", "value": { "fixedColor": "red", "mode": "fixed" } },
              { "id": "custom.fillOpacity", "value": 0 }
            ]
          }
        ]
      },
      "targets": [
        {
          "expr": "sli:availability:ratio_rate5m{service=~\"$service\"}",
          "legendFormat": "5m Availability"
        },
        {
          "expr": "sli:availability:ratio_rate1h{service=~\"$service\"}",
          "legendFormat": "1h Availability"
        },
        {
          "expr": "vector(0.999)",
          "legendFormat": "SLO Target (99.9%)"
        }
      ]
    },
    {
      "title": "Request Latency Distribution",
      "type": "timeseries",
      "gridPos": { "h": 10, "w": 12, "x": 12, "y": 21 },
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 10,
            "drawStyle": "line",
            "showPoints": "never"
          },
          "unit": "s"
        }
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.50, sum by (le) (rate(http_request_duration_seconds_bucket{service=~\"$service\"}[5m])))",
          "legendFormat": "P50"
        },
        {
          "expr": "histogram_quantile(0.90, sum by (le) (rate(http_request_duration_seconds_bucket{service=~\"$service\"}[5m])))",
          "legendFormat": "P90"
        },
        {
          "expr": "histogram_quantile(0.99, sum by (le) (rate(http_request_duration_seconds_bucket{service=~\"$service\"}[5m])))",
          "legendFormat": "P99"
        }
      ]
    },
    {
      "title": "Requests Per Second",
      "type": "timeseries",
      "gridPos": { "h": 10, "w": 12, "x": 0, "y": 31 },
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 20,
            "drawStyle": "bars",
            "stacking": { "mode": "normal" }
          },
          "unit": "reqps"
        }
      },
      "targets": [
        {
          "expr": "sum by (status) (rate(http_requests_total{service=~\"$service\"}[5m]))",
          "legendFormat": "HTTP {{ status }}"
        }
      ]
    },
    {
      "title": "Error Rate (5xx)",
      "type": "timeseries",
      "gridPos": { "h": 10, "w": 12, "x": 12, "y": 31 },
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 30,
            "drawStyle": "line",
            "gradientMode": "scheme"
          },
          "unit": "percentunit",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "red", "value": 0.001 }
            ]
          }
        }
      },
      "targets": [
        {
          "expr": "sli:http_requests_errors:rate5m{service=~\"$service\"} / sli:http_requests:rate5m{service=~\"$service\"}",
          "legendFormat": "Error Rate"
        },
        {
          "expr": "vector(0.001)",
          "legendFormat": "Budget Threshold (0.1%)"
        }
      ]
    }
  ],
  "refresh": "30s",
  "schemaVersion": 37,
  "style": "dark",
  "tags": ["slo", "sre", "availability", "error-budget"],
  "templating": {
    "list": [
      {
        "name": "datasource",
        "type": "datasource",
        "query": "prometheus",
        "current": { "selected": true, "text": "Prometheus", "value": "Prometheus" }
      },
      {
        "name": "service",
        "type": "query",
        "datasource": { "type": "prometheus", "uid": "${datasource}" },
        "query": "label_values(http_requests_total, service)",
        "includeAll": true,
        "multi": true,
        "current": { "selected": true, "text": "All", "value": "$__all" }
      }
    ]
  },
  "time": { "from": "now-24h", "to": "now" },
  "title": "SLO Dashboard â€” Availability & Error Budget",
  "uid": "slo-availability-dashboard",
  "version": 1
}
