{
  "annotations": { "list": [] },
  "editable": true,
  "title": "Cloud Cost Optimization Dashboard",
  "uid": "cost-optimization-001",
  "tags": ["finops", "cost", "sre"],
  "panels": [
    {
      "id": 1,
      "title": "Monthly AWS Spend",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 0 },
      "targets": [
        {
          "dimensions": { "Currency": "USD" },
          "metricName": "EstimatedCharges",
          "namespace": "AWS/Billing",
          "period": "86400",
          "statistics": ["Maximum"]
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "currencyUSD",
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 300 },
              { "color": "red", "value": 500 }
            ]
          }
        }
      }
    },
    {
      "id": 2,
      "title": "Cost by Service",
      "type": "piechart",
      "gridPos": { "h": 8, "w": 8, "x": 6, "y": 0 },
      "targets": [
        {
          "dimensions": { "ServiceName": ["AmazonEC2", "AmazonEKS", "AmazonS3", "AmazonRDS", "AWSDataTransfer"] },
          "metricName": "EstimatedCharges",
          "namespace": "AWS/Billing",
          "period": "86400",
          "statistics": ["Maximum"]
        }
      ]
    },
    {
      "id": 3,
      "title": "EC2 Spend Trend (30 Days)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 10, "x": 14, "y": 0 },
      "targets": [
        {
          "dimensions": { "ServiceName": "AmazonEC2", "Currency": "USD" },
          "metricName": "EstimatedCharges",
          "namespace": "AWS/Billing",
          "period": "86400",
          "statistics": ["Maximum"]
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "currencyUSD",
          "custom": { "fillOpacity": 20, "lineWidth": 2 }
        }
      }
    },
    {
      "id": 4,
      "title": "Spot vs On-Demand Instances",
      "type": "bargauge",
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 4 },
      "targets": [
        {
          "metricName": "GroupInServiceInstances",
          "namespace": "AWS/AutoScaling",
          "dimensions": { "AutoScalingGroupName": "sre-platform-production-mixed-asg" },
          "period": "300",
          "statistics": ["Average"]
        }
      ]
    },
    {
      "id": 5,
      "title": "Spot Interruption Rate",
      "type": "gauge",
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 8 },
      "targets": [
        {
          "metricName": "SpotInterruptionRate",
          "namespace": "Custom/SpotMetrics",
          "period": "3600",
          "statistics": ["Average"]
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 10 },
              { "color": "red", "value": 20 }
            ]
          }
        }
      }
    },
    {
      "id": 6,
      "title": "K8s Namespace CPU Requests vs Limits",
      "type": "bargauge",
      "gridPos": { "h": 8, "w": 12, "x": 6, "y": 8 },
      "targets": [
        {
          "expr": "sum(kube_pod_container_resource_requests{resource=\"cpu\"}) by (namespace)",
          "legendFormat": "{{namespace}} requests"
        },
        {
          "expr": "sum(kube_pod_container_resource_limits{resource=\"cpu\"}) by (namespace)",
          "legendFormat": "{{namespace}} limits"
        }
      ]
    },
    {
      "id": 7,
      "title": "K8s Memory Usage vs Requests",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "targets": [
        {
          "expr": "sum(container_memory_working_set_bytes{container!=\"\"}) by (namespace) / 1024 / 1024",
          "legendFormat": "{{namespace}} actual"
        },
        {
          "expr": "sum(kube_pod_container_resource_requests{resource=\"memory\"}) by (namespace) / 1024 / 1024",
          "legendFormat": "{{namespace}} requested"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "decmbytes",
          "custom": { "fillOpacity": 10 }
        }
      }
    },
    {
      "id": 8,
      "title": "Rightsizing Recommendations",
      "type": "table",
      "gridPos": { "h": 6, "w": 24, "x": 0, "y": 16 },
      "targets": [
        {
          "metricName": "RightsizingRecommendationCount",
          "namespace": "Custom/CostMetrics",
          "period": "86400",
          "statistics": ["Maximum"]
        }
      ],
      "description": "Populated by the daily rightsizing Lambda. Check SNS email for details."
    }
  ],
  "time": { "from": "now-30d", "to": "now" },
  "refresh": "1h"
}
